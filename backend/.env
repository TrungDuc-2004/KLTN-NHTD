# ====== FastAPI ======
APP_HOST=127.0.0.1
APP_PORT=8000

# ====== MinIO ======
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false


# Optional: nếu muốn trả về URL public dạng thẳng
# Ví dụ: http://127.0.0.1:9000
MINIO_PUBLIC_BASE_URL=http://127.0.0.1:9000

# Bucket prefix (theo yêu cầu: class-{class_id})
MINIO_BUCKET_PREFIX=class-

# Upload rules
MAX_FILE_SIZE_MB=50
ALLOWED_EXTS=pdf,txt,png,jpg,jpeg,docx
PART_SIZE_MB=10

# ====== PostgreSQL (Auth/Login) ======
PG_HOST=localhost
PG_PORT=5432
PG_DB=dataa
PG_USER=postgres
PG_PASSWORD=12345678

# ===== MongoDB =====
MONGO_URI=mongodb://localhost:27017
MONGO_DB=Data





# ====== JWT ======
JWT_SECRET=change_me_to_a_long_random_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# ====== CORS ======
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

