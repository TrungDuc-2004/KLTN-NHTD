# ====== FastAPI ======
APP_HOST=127.0.0.1
APP_PORT=8000

# ====== MinIO ======
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Optional: nếu muốn trả về URL public dạng thẳng
# Ví dụ: http://127.0.0.1:9000
MINIO_PUBLIC_BASE_URL=

# Bucket prefix (theo yêu cầu: class-{class_id})
MINIO_BUCKET_PREFIX=class-

# Upload rules
MAX_FILE_SIZE_MB=50
ALLOWED_EXTS=pdf,txt,png,jpg,jpeg,docx
PART_SIZE_MB=10
